<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>

<VBox xmlns:fx="http://javafx.com/fxml" alignment="center"
    fx:controller="dame.pages.Parametres.VueParametres">

	<VBox>
		<HBox alignment="center">
			<Text textAlignment="CENTER" text="Quelle est la taille du damier?"/>
		</HBox>
		<HBox alignment="center">
	        <ComboBox fx:id="choixTaille"/>
		</HBox>

		<HBox alignment="center">
			<Text textAlignment="CENTER" text="Quelle est la couleur du joueur1?"/>
		</HBox>

		<VBox>
				<HBox alignment="center">
					<Button fx:id="caseNoire"/>
					<CheckBox fx:id="checkNoire"/>
				</HBox>

				<HBox alignment="center">
					<Button fx:id="caseBlanc"/>
					<CheckBox fx:id="checkBlanc"/>
				</HBox>

		</VBox>
	</VBox>
</VBox>